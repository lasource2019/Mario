    plateforme13.existance(surface)
    plateforme14.existance(surface)
    plateforme15.existance(surface)
    plateforme16.existance(surface)
    mechantyolo1.bouger(surface)
    mechantyolo2.bouger(surface)
    mechantyolo3.bouger(surface)
    mechantyolo4.bouger(surface)
    mechantyolo5.bouger(surface)
    mechantyolo6.bouger(surface)
    mechantyolo7.bouger(surface)
    mechantyolo8.bouger(surface)
    mechantyolo9.bouger(surface)
    mechantyolo10.bouger(surface)
    pizzareine.existe(surface)
    pygame.display.update()

