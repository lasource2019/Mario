    #on fait marcher les hitbox ennemies
    if (mechantyolo1.y >= pizzayolo.y >= mechantyolo1.y-100) and (mechantyolo1.x+50 >= pizzayolo.x >= mechantyolo1.x-25):
        game_over = True
    if (mechantyolo2.y >= pizzayolo.y >= mechantyolo2.y-100) and (mechantyolo2.x+50 >= pizzayolo.x >= mechantyolo2.x-25):
        game_over = True
    if (mechantyolo3.y >= pizzayolo.y >= mechantyolo3.y-100) and (mechantyolo3.x+50 >= pizzayolo.x >= mechantyolo3.x-25):
        game_over = True
    if (mechantyolo4.y >= pizzayolo.y >= mechantyolo4.y-100) and (mechantyolo4.x+50 >= pizzayolo.x >= mechantyolo4.x-25):
        game_over = True
    if (mechantyolo5.y >= pizzayolo.y >= mechantyolo5.y-100) and (mechantyolo5.x+50 >= pizzayolo.x >= mechantyolo5.x-25):
        game_over = True
    if (mechantyolo6.y >= pizzayolo.y >= mechantyolo6.y-100) and (mechantyolo6.x+50 >= pizzayolo.x >= mechantyolo6.x-25):
        game_over = True
    if (mechantyolo7.y >= pizzayolo.y >= mechantyolo7.y-100) and (mechantyolo7.x+50 >= pizzayolo.x >= mechantyolo7.x-25):
        game_over = True
    if (mechantyolo8.y >= pizzayolo.y >= mechantyolo8.y-100) and (mechantyolo8.x+50 >= pizzayolo.x >= mechantyolo8.x-25):
