        pizzayolo.y = plateforme12.y-100
    if (plateforme13.y-10 >= pizzayolo.y >= plateforme13.y-100) and (plateforme13.x+280 >= pizzayolo.x >= plateforme13.x-85):
        pizzayolo.y = plateforme13.y-100
